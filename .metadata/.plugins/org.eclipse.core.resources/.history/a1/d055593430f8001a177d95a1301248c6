import java.io.*;


public class FILEIO {
	public static void main(String args[]) throws IOException{
		FileReader i = null;
		FileReader i1 = null;
		FileWriter o = null;
		try{
		i = new FileReader("input.txt");
		i1= i;
		o = new FileWriter("output.txt");
		
		int c1,c;
		int l=0;
		while((c1 = i.read()) != -1){
			l++;
		}
		
		char[] rev = new char[l];
		char[] rev1 = new char[l];
		
		int m=0;
		while((c = i1.read()) != -1){
			rev[m++]=(char)c;
		}
				
		for(int k=0;k<l;k++)
			rev1[k]=rev[--l];
		System.out.println(l);
		System.out.println(rev1);
		
		}finally{
			if(i!=null){
				i.close();
			}
			if(i1!=null){
				i.close();
			}
			if(o!=null){
				o.close();
			}
		}
	}

}
