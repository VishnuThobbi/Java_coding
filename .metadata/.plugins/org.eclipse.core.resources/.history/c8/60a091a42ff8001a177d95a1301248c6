		int c1,c;
		int l=0;
		while((c1 = i.read()) != -1){
			System.out.println((char)c1);
			l++;
		}
		char[] rev = new char[l];
		char[] rev1 = new char[l];
		System.out.println(l);
		/*for(int k=0;k<l;k++)
			rev1[k]=rev[--l];*/
	
		System.out.println(rev);	
		
		}finally{
			if(i!=null){
				i.close();
			}
			if(o!=null){
